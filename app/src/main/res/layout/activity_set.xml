<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f1eeee">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/green_text">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/fanhui"
                android:background="@drawable/fanhui_selector"
                android:singleLine="false"
                android:onClick="fanhui"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置基本信息"
            android:textSize="20dp"
            android:textColor="#9daca9"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="让运动数据更准确"
            android:textSize="20dp"
            android:textColor="#9daca9"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp">
        <ImageButton
            android:id="@+id/ib_nv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/huinv"
            android:onClick="gender_nv"
            android:layout_marginRight="30dp"
            />
        <ImageButton
            android:id="@+id/ib_nan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/nan"
            android:onClick="gender_nan"
            />

    </LinearLayout>
    <!--体重-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="体重 Kg"
            android:textSize="22dp"
            android:textColor="#817d7d"
            android:layout_marginRight="15dp"
            />

        <NumberPicker
            android:id="@+id/np_tizhong"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:gravity="left"
            android:foregroundGravity="left"
            android:orientation="horizontal"

            >
        </NumberPicker>
    </LinearLayout>
  <!--身高-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="身高 Cm"
            android:textSize="22dp"
            android:textColor="#817d7d"
            android:layout_marginRight="15dp"
            />

        <NumberPicker
            android:id="@+id/np_shengao"
            android:layout_width="wrap_content"
            android:layout_height="90dp"

            android:gravity="left"
            android:foregroundGravity="left"
            android:orientation="horizontal">
        </NumberPicker>
    </LinearLayout>

    <!--低速提醒-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="低速提醒"
            android:textSize="22dp"
            android:textColor="#817d7d"
            android:layout_marginRight="15dp"
            />

        <NumberPicker
            android:id="@+id/np_tixing"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:gravity="left"
            android:foregroundGravity="left"
            android:orientation="horizontal">
         </NumberPicker>
       <!-- <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioRroup"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_tixing"
                android:text="是"
                android:onClick="tixing"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_butixing"
                android:onClick="butixing"
                android:text="否"
                android:checked="true"
                android:focusable="true"
                />
        </RadioGroup>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="完成"
            android:textSize="20dp"
            android:background="@drawable/wan_selector"
            android:onClick="wancheng"
            />

    </LinearLayout>
</LinearLayout>
